
@model IEnumerable<ASP.MVC5.Models.Employee>
@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>
<p>@Html.ActionLink("Create new Employee","Create")</p>

<table id="etable" class="table table-hover">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.age)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.gender)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.firstName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.age)
                </td>
                <td>
                    @Html.DisplayFor(m => item.gender)
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit", new { id = item.id}) |
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                     @Html.ActionLink("Delete","Delete",new { id =item.id})|
                    <a asp-action="Edit" asp-route-id="@item.id"><i class="fas fa-marker fa-lg"></i></a>
                </td>
            </tr>
        }

    </tbody>

</table>
